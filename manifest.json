{
  "manifest_version": 3,
  "name": "Anti-Phishing Extension",
  "version": "1.0",
  "description": "Blocks phishing sites and alerts the user.",
  "background": {
    "service_worker": "background.js"
  },
  "permissions": [
    "declarativeNetRequest",
    "declarativeNetRequestFeedback",
    "notifications",
    "scripting",
    "tabs",
    "webNavigation",
     "storage"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["popup.js"]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon48.png",
      "48": "icons/icon48.png",
      "128": "icons/icon48.png"
    }
  },
  "web_accessible_resources": [
    {
      "resources": ["danger.html", "safe.html"],
      "matches": ["<all_urls>"]
    }
  ]
}
